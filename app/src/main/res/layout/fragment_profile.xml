                        <EditText
                            android:id="@+id/edit_civil"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:ems="9"
                            android:inputType="textPersonName"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/civil"
                            app:layout_constraintStart_toStartOf="@+id/edit_religiosity"
                            app:layout_constraintTop_toTopOf="@+id/civil" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


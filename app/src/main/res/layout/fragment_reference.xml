<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReferenceFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="right"
            android:orientation="vertical">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15sp">

                    <Button
                        android:id="@+id/ref_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_edit_24"
                        android:text="ערוך"
                        android:visibility="visible" />


                    <Button
                        android:id="@+id/ref_submit_changes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_done_24"
                        android:text="אישור"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/textView4"
                        android:text="הפניה"
                        android:textSize="30sp" />

                </TableRow>

            </TableLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:layout_editor_absoluteY="112dp">

                <TextView
                    android:id="@+id/ref_status"
                    style="@style/word_profile_field"
                    android:paddingTop="@dimen/ref_status_padding"
                    android:paddingBottom="@dimen/ref_status_padding"
                    android:text="סטטוס הפניה:"
                    app:layout_constraintBottom_toTopOf="@+id/textView6"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/edit_ref_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accepted_not_arrived"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ref_status"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/ref_status"
                    app:layout_constraintTop_toTopOf="@+id/ref_status" />

                <EditText
                    android:id="@+id/edit_ref_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ems="8"
                    android:inputType="text"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />


                <TextView
                    android:id="@+id/textView6"
                    style="@style/word_profile_field"
                    android:text="שם מקבל ההפניה:"
                    android:textDirection="rtl"
                    app:layout_constraintBottom_toTopOf="@+id/ref_date"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ref_status" />

                <TextView
                    android:id="@+id/ref_date"
                    style="@style/word_profile_field"
                    android:text="תאריך ושעת הפניה:"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/edit_ref_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dateTimeSize"
                    android:background="@drawable/view_border"
                    app:layout_constraintRight_toLeftOf="@+id/edit_ref_time"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/edit_ref_time" />

                <TextView
                    android:id="@+id/edit_ref_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="@dimen/dateTimeSize"
                    android:background="@drawable/view_border"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toRightOf="@+id/edit_ref_date"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ref_date" />




                <!--                <com.google.android.material.textfield.TextInputLayout-->
                <!--                    android:id="@+id/textInputLayout6"-->
                <!--                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:layout_constraintTop_toBottomOf="rea">-->

                <!--                    <com.google.android.material.textfield.TextInputEditText-->
                <!--                        android:id="@+id/test"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:hint="@string/newReferenceReceiverName"-->
                <!--                        android:inputType="textPersonName" />-->

                <!--                </com.google.android.material.textfield.TextInputLayout>-->
                <!--                -->
                <TextView
                    android:id="@+id/ref_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="סיבת הפניה:"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/edit_ref_reason"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_ref_time" />

                <EditText
                    android:id="@+id/edit_ref_reason"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="8"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/edit_ref_time"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edit_referrer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ems="8"
                    android:inputType="text"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/referrer_name"
                    app:layout_constraintHorizontal_bias="0.351"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/referrer_name"
                    app:layout_constraintTop_toTopOf="@+id/referrer_name"
                    app:layout_constraintVertical_bias="0.833" />

                <TextView
                    android:id="@+id/referrer_name"
                    style="@style/word_profile_field"
                    android:text="שם גורם מפנה:"
                    app:layout_constraintBottom_toTopOf="@+id/referrer_rule"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edit_ref_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ems="8"
                    android:inputType="text"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/referrer_rule"
                    app:layout_constraintLeft_toLeftOf="@+id/edit_referrer_name"
                    app:layout_constraintTop_toTopOf="@+id/referrer_rule" />

                <TextView
                    android:id="@+id/referrer_rule"
                    style="@style/word_profile_field"
                    android:text="תפקיד גורם מפנה:"
                    app:layout_constraintBottom_toTopOf="@+id/ref_phone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/referrer_name" />

                <EditText
                    android:id="@+id/edit_ref_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ems="8"
                    android:inputType="phone"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ref_phone"
                    app:layout_constraintLeft_toLeftOf="@+id/edit_ref_rule"
                    app:layout_constraintTop_toTopOf="@+id/ref_phone" />

                <TextView
                    android:id="@+id/ref_phone"
                    style="@style/word_profile_field"
                    android:text="טלפון גורם מפנה:"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/referrer_rule" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <CheckBox
                android:id="@+id/if_Welfare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="האם נמצאת בקשר עם גורם רווחה?"
                android:textDirection="firstStrongRtl" />

            <androidx.cardview.widget.CardView
                android:id="@+id/welfare_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/edit_ref_welfare_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ems="8"
                        android:inputType="text"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ref_welfare_name"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ref_welfare_name" />

                    <TextView
                        android:id="@+id/ref_welfare_name"
                        style="@style/word_profile_field"
                        android:text="שם גורם רווחה:"
                        app:layout_constraintBottom_toTopOf="@+id/ref_welfare_rule"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_ref_welfare_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ems="8"
                        android:inputType="phone"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ref_welfare_phone"
                        app:layout_constraintLeft_toLeftOf="@+id/edit_ref_welfare_rule"
                        app:layout_constraintTop_toTopOf="@+id/ref_welfare_phone" />

                    <TextView
                        android:id="@+id/ref_welfare_phone"
                        style="@style/word_profile_field"
                        android:text="מספר טלפון גורם רווחה:"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ref_welfare_rule" />


                    <EditText
                        android:id="@+id/edit_ref_welfare_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ems="8"
                        android:inputType="text"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ref_welfare_rule"
                        app:layout_constraintLeft_toLeftOf="@+id/edit_ref_welfare_name"
                        app:layout_constraintTop_toTopOf="@+id/ref_welfare_rule" />

                    <TextView
                        android:id="@+id/ref_welfare_rule"
                        style="@style/word_profile_field"
                        android:text="תפקיד גורם הרווחה:"
                        app:layout_constraintBottom_toTopOf="@+id/ref_welfare_phone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ref_welfare_name" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/files_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/linearViewSpacing"
                android:layout_marginBottom="@dimen/linearViewSpacing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/filesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:text="קבצים"
                        android:textSize="25sp"
                        app:drawableLeftCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/filesData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:visibility="visible"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="50dp">

                        <TextView
                            android:id="@+id/parentApprovalLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parantApproval"
                            android:textSize="@dimen/fileLabelTextSize"
                            app:layout_constraintBaseline_toBaselineOf="@+id/parentApprovalLink"
                            app:layout_constraintLeft_toRightOf="@+id/parentApprovalLink"
                            app:layout_constraintRight_toRightOf="parent" />

                        <TextView
                            android:id="@+id/parentApprovalLink"
                            android:layout_width="@dimen/fileLinkViewWidth"
                            android:layout_height="@dimen/fileLinkViewHeight"
                            android:background="@drawable/view_border"
                            android:ems="9"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/parentApprovalButton"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintLeft_toRightOf="@+id/parentApprovalButton"
                            app:layout_constraintRight_toLeftOf="@+id/parentApprovalLabel"
                            app:layout_constraintTop_toTopOf="@+id/parentApprovalButton" />

                        <TextView
                            android:id="@+id/courtOrderLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/courtOrder"
                            android:textSize="@dimen/fileLabelTextSize"
                            app:layout_constraintBaseline_toBaselineOf="@+id/courtOrderLink"
                            app:layout_constraintRight_toRightOf="@+id/parentApprovalLabel" />

                        <TextView
                            android:id="@+id/courtOrderLink"
                            android:layout_width="@dimen/fileLinkViewWidth"
                            android:layout_height="@dimen/fileLinkViewHeight"
                            android:background="@drawable/view_border"
                            android:ems="9"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/courtOrderButton"
                            app:layout_constraintTop_toTopOf="@id/courtOrderButton"
                            app:layout_constraintLeft_toLeftOf="@+id/parentApprovalLink" />

                        <TextView
                            android:id="@+id/socialWorkerIntakeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/socialWorkerIntake"
                            android:textSize="@dimen/fileLabelTextSize"
                            app:layout_constraintBaseline_toBaselineOf="@+id/socialWorkerIntakeLink"
                            app:layout_constraintRight_toRightOf="@+id/courtOrderLabel" />

                        <TextView
                            android:id="@+id/socialWorkerIntakeLink"
                            android:layout_width="@dimen/fileLinkViewWidth"
                            android:layout_height="@dimen/fileLinkViewHeight"
                            android:background="@drawable/view_border"
                            android:ems="9"
                            android:padding="5dp"
                            app:layout_constraintTop_toTopOf="@+id/socialWorkerIntakeButton"
                            app:layout_constraintBottom_toBottomOf="@id/socialWorkerIntakeButton"
                            app:layout_constraintLeft_toLeftOf="@+id/courtOrderLink" />

                        <TextView
                            android:id="@+id/medicalIntakeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medicalIntake"
                            android:textSize="@dimen/fileLabelTextSize"
                            app:layout_constraintBaseline_toBaselineOf="@+id/medicalIntakeLink"
                            app:layout_constraintRight_toRightOf="@+id/socialWorkerIntakeLabel" />

                        <TextView
                            android:id="@+id/medicalIntakeLink"
                            android:layout_width="@dimen/fileLinkViewWidth"
                            android:layout_height="@dimen/fileLinkViewHeight"
                            android:background="@drawable/view_border"
                            android:ems="9"
                            android:padding="5dp"
                            app:layout_constraintTop_toTopOf="@+id/medicalIntakeButton"
                            app:layout_constraintBottom_toBottomOf="@+id/medicalIntakeButton"
                            app:layout_constraintLeft_toLeftOf="@+id/socialWorkerIntakeLink" />

                        <ImageButton
                            android:id="@+id/parentApprovalButton"
                            android:layout_width="@dimen/image_button_width"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_upload_sign_svgrepo_com"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/parentApprovalLink"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/courtOrderButton"
                            android:layout_width="@dimen/image_button_width"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_upload_sign_svgrepo_com"
                            app:layout_constraintBottom_toTopOf="@+id/socialWorkerIntakeButton"
                            app:layout_constraintLeft_toLeftOf="@+id/parentApprovalButton"
                            app:layout_constraintTop_toBottomOf="@+id/parentApprovalButton" />

                        <ImageButton
                            android:id="@+id/socialWorkerIntakeButton"
                            android:layout_width="@dimen/image_button_width"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_upload_sign_svgrepo_com"
                            app:layout_constraintBottom_toTopOf="@+id/medicalIntakeButton"
                            app:layout_constraintLeft_toLeftOf="@+id/courtOrderButton"
                            app:layout_constraintTop_toBottomOf="@+id/courtOrderButton" />

                        <ImageButton
                            android:id="@+id/medicalIntakeButton"
                            android:layout_width="@dimen/image_button_width"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_upload_sign_svgrepo_com"
                            app:layout_constraintLeft_toLeftOf="@+id/socialWorkerIntakeButton"
                            app:layout_constraintTop_toBottomOf="@+id/socialWorkerIntakeButton" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/leavingCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/linearViewSpacing"
                android:layout_marginBottom="@dimen/linearViewSpacing"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/leavingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/cardTitleLeftPadding"
                        android:text="פרטי עזיבה"
                        android:textSize="25sp"
                        app:drawableLeftCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/leavingData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/ref_leaving_date_time"
                            style="@style/word_profile_field"
                            android:layout_marginTop="16dp"
                            android:text="תאריך ושעת עזיבה:"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/edit_ref_leaving_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/view_border"
                            android:textSize="@dimen/dateTimeSize"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintLeft_toRightOf="@+id/edit_ref_leaving_date"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ref_leaving_date_time" />

                        <TextView
                            android:id="@+id/edit_ref_leaving_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_border"
                            android:textSize="@dimen/dateTimeSize"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/edit_ref_leaving_time"
                            app:layout_constraintTop_toTopOf="@+id/edit_ref_leaving_time" />

                        <EditText
                            android:id="@+id/edit_ref_leaving_dest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="8"
                            android:inputType="text"
                            android:padding="5dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/ref_leaving_dest"
                            app:layout_constraintStart_toStartOf="@+id/edit_ref_leaving_reason" />

                        <TextView
                            android:id="@+id/ref_leaving_dest"
                            style="@style/word_profile_field"
                            android:paddingTop="8dp"
                            android:text="יעד עזיבה:"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ref_leaving_reason" />

                        <EditText
                            android:id="@+id/edit_ref_leaving_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="8"
                            android:inputType="text"
                            android:padding="5dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/ref_leaving_reason"
                            app:layout_constraintEnd_toStartOf="@+id/ref_leaving_reason"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/ref_leaving_reason"
                            style="@style/word_profile_field"
                            android:paddingTop="16dp"
                            android:text="סיבת עזיבה:"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edit_ref_leaving_time" />

                        <EditText
                            android:id="@+id/edit_ref_leaving_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="8"
                            android:inputType="text"
                            android:padding="5dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/ref_leaving_msg"
                            app:layout_constraintStart_toStartOf="@+id/edit_ref_leaving_dest" />

                        <TextView
                            android:id="@+id/ref_leaving_msg"
                            style="@style/word_profile_field"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="5dp"
                            android:paddingTop="8dp"
                            android:text="הודעה נמסרה ל:"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ref_leaving_dest" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FragmentTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/smallLabelPadding</item>
        <item name="android:paddingEnd">@dimen/smallLabelPadding</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="word_title_recycle_tmp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="word_profile_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="profile_card_view">
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <style name="SmallTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="Title_ThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">
            @style/TitleMaterialAlertDialog.MaterialComponents.Title.Text</item>
    </style>
    <style name="TitleMaterialAlertDialog.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="spinner_style">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:gravity">right</item>
    </style>
</resources>